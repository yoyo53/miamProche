<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProducteurActivity">

    <TextView
        android:id="@+id/main_textview_greeting"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="   Producer Description
                     "
        app:layout_constraintBottom_toBottomOf="@+id/main_edittext_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.232" />

    <EditText
        android:id="@+id/main_edittext_name"
        android:layout_width="240dp"
        android:layout_height="48dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="544dp"
        android:hint="New product"
        android:textAlignment="textEnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/main_button"
        android:layout_width="87dp"
        android:layout_height="48dp"
        android:layout_marginStart="300dp"
        android:layout_marginBottom="145dp"
        android:text="ADD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_edittext_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.256"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="128dp" />

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="80dp"
        android:layout_height="72dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/main_button"
        app:layout_constraintEnd_toStartOf="@+id/main_textview_greeting"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.26"
        android:src="@drawable/logo"/>

    <ListView
        android:id="@+id/products_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.646"
        app:layout_constraintStart_toStartOf="parent"
        />

    <RelativeLayout

        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="0dp">


        <ImageView
            android:id="@+id/item"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="230dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/item_name"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="250dp"
            android:layout_marginEnd="250dp"
            android:text="CAROTTES" />

        <TextView
            android:id="@+id/item_des"
            style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginStart="150dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="280dp"
            android:layout_marginEnd="400dp"
            android:layout_marginBottom="200dp"
            android:text="Des carottes oranges, délicieuse en mode miam miam..." />


        <ImageView
            android:id="@+id/item2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="370dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/item_name2"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="390dp"
            android:layout_marginEnd="250dp"
            android:text="COURGETTES" />

        <TextView
            android:id="@+id/item_des2"
            style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:layout_marginStart="160dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="420dp"
            android:layout_marginEnd="400dp"
            android:layout_marginBottom="200dp"
            android:text="Petites courgettes, vertes et mûres..." />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
